{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "allowJs": true,
    "declaration": true,
    "paths": {
      "zlib": ["./node_modules/browserify-zlib"],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}